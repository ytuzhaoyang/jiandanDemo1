<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:gravity="center_horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_layout_empty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/nodata" />


        <TextView
            android:id="@+id/tv_layout_empty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_32"
            android:text="还没加载好内容哦~"
            android:textSize="@dimen/text_size_13" />

        <Button
            android:id="@+id/btnTryAgain"
            android:layout_width="@dimen/size_138"
            android:layout_height="@dimen/size_36"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/size_38"
            android:background="@drawable/error_base"
            android:gravity="center"
            android:text="重新加载"
            android:textColor="@color/item_normal_bg"
            android:textSize="@dimen/text_size_16" />

    </LinearLayout>
</android.support.v4.widget.NestedScrollView>